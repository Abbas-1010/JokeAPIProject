      <option value="sexist">sexist</option>
      <option value="explicit">explicit</option>
    </select>

    <label>ðŸ”¢ Amount of jokes:</label>
    <input type="number" name="amount"/>

    <input type="submit" value="ðŸ˜‚ Generate!"/>
  </form>

  <% try{if(jk!=undefined){%>
